# Example Environment Variables for CompuTech Exam Platform
# Copy this file to .env and fill in your actual values

# Database Configuration
MONGODB_URI=your_mongodb_connection_string_here
MONGOURI2=your_questions_mongodb_connection_string_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here

# reCAPTCHA Configuration (Required for production)
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here
REACT_APP_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here

# Admin Credentials
ADMIN_EMAIL=admin@computech.com
ADMIN_PASSWORD=your_admin_password_here

# Session Configuration
SESSION_SECRET=your_session_secret_here

# Google OAuth Configuration
GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id_here
GOOGLE_OAUTH_CLIENT_SECRET=your_google_oauth_client_secret_here

# Node Environment
NODE_ENV=production

# Port Configuration (optional, defaults to 5000 in development)
PORT=3000